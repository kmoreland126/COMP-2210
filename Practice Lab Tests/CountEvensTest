import java.util.Arrays;
import static org.junit.Assert.assertArrayEquals;
import static org.junit.Assert.assertEquals;
import org.junit.Test;


public class CountEvensTest {

   int[] a = {1, 2, 3, 4, 5};
   int[] b = {2, 4, 6, 8, 10};
   int[] c = {0, 1, 2, 3, 4};
   int[] d = {1, 1, 1, 1, 1};
   
   @Test public void counteven() {
      assertEquals(2, CountEvens.countEvens(a));
      assertEquals(5, CountEvens.countEvens(b));
      assertEquals(3, CountEvens.countEvens(c));
      assertEquals(0, CountEvens.countEvens(d));
   }
}
